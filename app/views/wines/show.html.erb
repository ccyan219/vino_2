<div class="page-header">
  <h3>Wine #<%= @wine.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Image</dt>
      <dd><img src="<%= @wine.image %>" class="img-responsive"></dd>

      <dt>Name</dt>
      <dd><%= @wine.name %></dd>

      <dt>Category</dt>
      <dd><%= @wine.category %></dd>

      <dt>Variety</dt>
      <dd><%= @wine.variety %></dd>

      <dt>Sweetness</dt>
      <dd><%= @wine.sweetness %></dd>

      <dt>Body</dt>
      <dd><%= @wine.body %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/wines" class="btn btn-primary">
        Back
      </a>
      <a href="/wines/<%= @wine.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_wine/<%= @wine.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
